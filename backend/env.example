# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/habittty

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
# Development - allow all origins
CORS_ORIGIN_DEV=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Production - specify your frontend domain
CORS_ORIGIN_PROD=https://your-frontend-domain.com

# Additional CORS settings
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
